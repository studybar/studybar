<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="discussion"
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_discussion"
        android:shortcutShortLabel="@string/title_discussion"
        android:shortcutLongLabel="@string/title_discussion"
        tools:ignore="UnusedAttribute">
        <intent
            android:action="android.intent.action.launch_discussion"
            android:targetPackage="com.wedo.studybar"
            android:targetClass="com.wedo.studybar.activities.MainActivity" />
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
             they launch this shortcut. -->
        <categories android:name="android.shortcut.category" />
    </shortcut>
    <shortcut
        android:shortcutId="notification"
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_notification"
        android:shortcutShortLabel="@string/title_notifications"
        android:shortcutLongLabel="@string/title_notifications"
        tools:ignore="UnusedAttribute">
        <intent
            android:action="android.intent.action.launch_notifications"
            android:targetPackage="com.wedo.studybar"
            android:targetClass="com.wedo.studybar.activities.MainActivity" />
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
             they launch this shortcut. -->
        <categories android:name="android.shortcut.category" />
    </shortcut>
</shortcuts>