<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="u/nobody"/>

    <katex.hourglass.in.mathlib.MathView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment.Here is the comment."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/comment_num_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="64"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/comment_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_upvote"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintRight_toLeftOf="@id/comment_num_likes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/comment_num_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/comment_like_button"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="89"/>
        <ImageButton
            android:id="@+id/comment_replay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_comment"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintRight_toLeftOf="@id/comment_num_replies"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            android:id="@+id/comment_star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:button="@drawable/star_button_custom"
            app:layout_constraintRight_toLeftOf="@id/comment_replay_button"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/comment_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_report_smaller"
            android:layout_marginEnd="32dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintRight_toLeftOf="@+id/comment_star_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>