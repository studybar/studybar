<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/horizontal_item_width_min"
    android:layout_height="@dimen/horizontal_item_height_min"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    Card_view:cardCornerRadius="8dp"
    Card_view:cardElevation="8dp"
    Card_view:contentPadding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="@dimen/horizontal_item_height_min"
    android:minWidth="@dimen/horizontal_item_width_min">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="@dimen/list_book_show_width"
            android:layout_height="@dimen/list_book_show_height"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_book_name_height"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:maxLines="2"
            android:textAppearance="?android:textAppearanceSmall"/>

        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_book_author_height"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceSmall"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>